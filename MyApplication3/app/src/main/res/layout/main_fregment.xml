<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_fregment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.omar.helpinghand.mainFregment">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.mancj.materialsearchbar.MaterialSearchBar
            android:id="@+id/searchBars"
            android:layout_width="match_parent"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:autofillHints="@string/app_name"
            app:mt_hint="Enter you Product"
            app:mt_speechMode="false"></com.mancj.materialsearchbar.MaterialSearchBar>



        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/SliderDots"
            android:layout_below="@+id/viewPager"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/moss"
        android:layout_marginBottom="12dp"></android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show all"
            android:layout_marginRight="12dp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="right"
            android:onClick="all"
            tools:ignore="OnClick" />
        <android.support.v7.widget.RecyclerView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/moss2"></android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show all"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="12dp"
            android:layout_gravity="right"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_menu_share"
                    android:layout_margin="5dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_menu_share"
                    android:layout_margin="5dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_menu_share"
                    android:layout_margin="5dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_menu_share"
                    android:layout_margin="5dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_menu_share"
                    android:layout_margin="5dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_menu_share"
                    android:layout_margin="5dp"/>
            </LinearLayout>
        </ScrollView>
        <android.support.v7.widget.RecyclerView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/moss3"
            android:layout_marginBottom="12dp"></android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show all"
            android:layout_marginRight="12dp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="right"/>
        <android.support.v7.widget.RecyclerView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/moss4"></android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show all"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="12dp"
            android:layout_gravity="right"/>
    </LinearLayout>
</ScrollView>
</RelativeLayout>
